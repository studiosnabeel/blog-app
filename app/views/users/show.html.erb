<section>

  <h1>User Details </h1>

  <%user = @user%>

  <div class="user__box">
    <img src="<%= user.photo %>" alt="user-photo">
    <div class="name__box">
      <p class="user__name"><%= link_to "#{user.name}", "#{users_path}/#{user.id}"%></p>
      <p class="user_number_of_post">Number of posts <%= user.posts_counter || 0 %></p>
    </div>
  </div>
  <div class="bio-of-user">
    <p>Bio</p>
    <p><%=user.bio%></p>
  </div>

  <div>
  <p><%= link_to "Create new post", "./#{user.id}/posts/new" %></p>
</div>

  <div class="post__container">
    <% user.recent_posts.each do |post |%>
    <div class="post-container">
        <h2>Post #<%=post.id%>: <%= link_to "#{post.title}", "#{user.id}/posts/#{post.id}"%></h2>
        <p><%=post.text[0..100]%>...</p>
        <div class="post-comments-likes">
        <p class= 'comment_likes'>Commernts: <%= post.comments_counter || 0%>, Likes: <%= post.likes_counter || 0%>
        </div>
    </div>
    <% end %>
  </div>
  <form class="see-all-posts-btn" action="./<%=user.id%>/posts" method="get">
    <button type="submit">See all posts</button>
  </form>

</section>
